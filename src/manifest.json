{
  "manifest_version": 3,
  "name": "中国語サーチchaimet",
  "short_name": "chaimet",
  "description": "中国語サーチchaimet(チャイメットと読みます。)は、中国語学習者に便利な機能を提供する拡張機能です。",
  "version": "0.0.2",
  "author": "Takumi Oda",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "icon-128.png", "icon-34.png"],
      "matches": []
    }
  ],

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://cjjc.weblio.jp/content/*"]
}
